{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "<your-jwt-secret-key>",
    "DurationSeconds": 600,
    "Issuer": "Readily"
  },
  "SmtpSettings": {
    "Server": "smtp.gmail.com",
    "Port": 587,
    "SenderName": "Readily",
    "SenderEmail": "<your-sender-email>",
    "Username": "<your-smtp-username>",
    "Password": "<your-smtp-password>",
    "EnableSsl": true
  }
}
